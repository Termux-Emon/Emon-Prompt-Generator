<body>
  <h1>üöÄ EMon Prompt Generator (Gemini Flash)</h1>
  <textarea id="userInput" placeholder="Describe your idea..."></textarea><br />
  <button onclick="generatePrompt()">üî• Generate Prompts</button>
  <div id="result" class="output"></div>

  <script>
    const API_KEY = "AIzaSyDfj1K8t3p9ObXnz1wxjVFSvm3nxDSz8W8"; // ‚úÖ Your key here
    const MODEL = "gemini-2.0-flash";

    async function generatePrompt() {
      const userText = document.getElementById("userInput").value.trim();
      if (!userText) return alert("Please write something!");

      const resultDiv = document.getElementById("result");
      resultDiv.innerHTML = "‚è≥ Generating...";
      const start = Date.now();

      const prompt = `
You are a creative prompt generator for AI images. Based on this input: "${userText}", generate exactly 4 prompt variations:
1. Short Prompt:
2. Long Cinematic Prompt:
3. Futuristic Style:
4. Dreamy / Fantasy Style:

Respond clearly with each numbered section, no explanation.
`;

      try {
        const res = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/${MODEL}:generateContent?key=${API_KEY}`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            contents: [{ parts: [{ text: prompt }] }]
          })
        });

        const data = await res.json();
        const text = data?.candidates?.[0]?.content?.parts?.[0]?.text || "‚ùå No response from Gemini Flash.";
        const prompts = text.split(/\d+\.\s/).filter(p => p.trim());

        let html = "";
        prompts.forEach((p, i) => {
          html += `
            <div class="prompt">
              <strong>Prompt ${i + 1}</strong>
              <p>${p.trim()}</p>
              <button class="copy-btn" onclick="copyText(this)">üìã Copy</button>
            </div>`;
        });

        const time = ((Date.now() - start) / 1000).toFixed(2);
        resultDiv.innerHTML = html + `<div class="timer">‚è±Ô∏è Generated in ${time}s</div>`;
      } catch (err) {
        console.error(err);
        resultDiv.innerHTML = "‚ùå Error! Check console or API key.";
      }
    }

    function copyText(btn) {
      const text = btn.previousElementSibling.innerText;
      navigator.clipboard.writeText(text);
      btn.innerText = "‚úÖ Copied!";
      setTimeout(() => (btn.innerText = "üìã Copy"), 1500);
    }
  </script>
